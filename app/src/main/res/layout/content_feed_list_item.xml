<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- A CardView that contains a Images and texts -->

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/user_post_image"
                android:layout_width="240dp"
                android:layout_height="246dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/content_feed_image_background"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="Headline of Post"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/user_post_headline"
                android:layout_alignLeft="@id/user_post_image"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/user_post_username"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_below="@+id/user_post_image"
                android:layout_alignLeft="@+id/user_post_image"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-25dp"
                android:text="Username"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/numLikes"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_below="@+id/user_post_image"
                android:layout_alignRight="@+id/heart"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-25dp"
                android:layout_marginRight="25dp"
                android:text="Likes"
                android:textColor="@color/colorText"/>

            <ImageView
                android:id="@+id/heart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_alignRight="@+id/user_post_image"
                android:layout_alignBottom="@+id/user_post_image"
                android:layout_marginBottom="5dp"
                android:src="@drawable/heart_icon_filled" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>