<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/user_post_image"
        android:layout_width="240dp"
        android:layout_height="246dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/content_feed_image_background"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="Headline of Post"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/user_post_headline"

        android:layout_alignLeft="@id/user_post_image"
        android:textColor="@color/colorText"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@+id/user_post_image"
        android:layout_alignLeft="@+id/user_post_image"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-25dp"
        android:text="Username"
        android:textColor="@color/colorText"
        android:id="@+id/user_post_username" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@+id/user_post_image"
        android:layout_alignRight="@+id/user_post_image"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-25dp"
        android:layout_marginRight="5dp"
        android:text="Likes"
        android:textColor="@color/colorText"
        android:id="@+id/numLikes"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/heart_icon_filled"
        android:layout_alignBottom="@+id/user_post_image"
        android:layout_alignRight="@+id/user_post_image"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:id="@+id/heart"/>


</androidx.cardview.widget.CardView>